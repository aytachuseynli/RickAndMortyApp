<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A0564"
    tools:context=".ui.fragments.CharacterDetailFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backBtn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_button_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        app:icon="@drawable/ic_back"
        app:iconSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rick Sanchez"
        android:textSize="44sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/irishgroverregular"
        app:layout_constraintTop_toBottomOf="@id/backBtn"/>

    <ImageView
        android:id="@+id/detailImg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/rick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailImg"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="left"
        android:orientation="vertical">


        <TextView
            android:id="@+id/genderTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender: Male"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/interfont"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/statusTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Alive"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/interfont"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/speciesTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Species: Human"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/interfont"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/typeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Person-person"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/interfont"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/originTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin: C-137"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/interfont"
            android:textColor="@color/white"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>